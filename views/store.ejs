<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Garapin Cloud - Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <%- include('partials/firebase-sdk') %>
</head>
<body>
    <div class="container-fluid" data-firebase-config='<%= JSON.stringify(firebaseConfig) %>'>
        <div class="row">
            <%- include('partials/sidebar', {currentPage: 'store'}) %>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 bg-light">
                <%- include('partials/header', {pageTitle: 'Store'}) %>

                <!-- Search Bar -->
                <div class="row mb-4">
                    <div class="col-12">
                        <input type="text" class="form-control" placeholder="Search applications..." id="searchApps">
                    </div>
                </div>

                <!-- Applications Grid -->
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                    <% applications.forEach(app => { %>
                        <div class="col">
                            <div class="card h-100">
                                <% if (app.logo && app.logo.url) { %>
                                    <a href="/store/<%= app.slug %>" class="text-decoration-none">
                                        <img src="<%= app.logo.url %>" class="card-img-top p-3" alt="<%= app.title %>" style="height: 200px; object-fit: contain;">
                                    </a>
                                <% } else { %>
                                    <a href="/store/<%= app.slug %>" class="text-decoration-none">
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-box fs-1"></i>
                                        </div>
                                    </a>
                                <% } %>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/store/<%= app.slug %>" class="text-decoration-none text-dark">
                                            <%= app.title %>
                                        </a>
                                    </h5>
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="text-warning me-2">
                                            <% const rating = typeof app.rating === 'number' ? app.rating : 0; %>
                                            <% for(let i = 1; i <= 5; i++) { %>
                                                <% if(rating >= i) { %>
                                                    <i class="bi bi-star-fill"></i>
                                                <% } else if(rating > i-1 && rating < i) { %>
                                                    <i class="bi bi-star-half"></i>
                                                <% } else { %>
                                                    <i class="bi bi-star"></i>
                                                <% } %>
                                            <% } %>
                                        </div>
                                        <small class="text-muted">(<%= app.installed_count %> installs)</small>
                                    </div>
                                    <p class="card-text text-muted">
                                        <%= app.description.replace(/<[^>]*>/g, '').substring(0, 100) %>...
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="price">
                                            <strong>Rp. <%= app.price.toLocaleString('id-ID') %></strong> / Month
                                        </div>
                                        <button class="btn btn-primary install-btn" data-app-id="<%= app._id %>">
                                            <i class="bi bi-download me-1"></i> Install
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/controllers/storeController.js"></script>
</body>
</html> 