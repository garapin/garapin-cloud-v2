<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Garapin Cloud - <%= application.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-auth-compat.js"></script>
</head>
<body>
    <div class="container-fluid" data-firebase-config='<%= JSON.stringify(firebaseConfig) %>'>
        <div class="row">
            <%- include('partials/sidebar', {currentPage: 'store'}) %>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 bg-light">
                <%- include('partials/header', {pageTitle: 'Application Detail'}) %>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-8">
                        <!-- Application Info -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-4">
                                    <% if (application.logo && application.logo.url) { %>
                                        <img src="<%= application.logo.url %>" alt="<%= application.title %>" class="me-3" style="width: 64px; height: 64px; object-fit: contain;">
                                    <% } %>
                                    <div>
                                        <h1 class="h3 mb-0"><%= application.title %></h1>
                                        <div class="d-flex align-items-center mb-1">
                                            <div class="text-warning me-2">
                                                <% const rating = typeof application.rating === 'number' ? application.rating : 0; %>
                                                <% for(let i = 1; i <= 5; i++) { %>
                                                    <% if(rating >= i) { %>
                                                        <i class="bi bi-star-fill"></i>
                                                    <% } else if(rating > i-1 && rating < i) { %>
                                                        <i class="bi bi-star-half"></i>
                                                    <% } else { %>
                                                        <i class="bi bi-star"></i>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                            <span class="text-muted">(<%= rating %> / 5)</span>
                                        </div>
                                        <div class="text-muted">
                                            <span class="badge bg-primary"><%= application.category %></span>
                                            <span class="ms-2">
                                                <% if (application.userStatus === 'official') { %>
                                                    <span class="badge bg-success me-1">
                                                        <i class="bi bi-patch-check-fill"></i> Official
                                                    </span>
                                                <% } %>
                                                by <span style="color: #223CFF; font-weight: 500"><%= application.userName %></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <h5 class="mb-3">Description</h5>
                                <div class="mb-4">
                                    <%- application.description %>
                                </div>

                                <h5 class="mb-3">Screenshots</h5>
                                <div class="row g-3 mb-4">
                                    <% application.screenshoots.forEach(screenshot => { %>
                                        <div class="col-md-6">
                                            <img src="<%= screenshot.url %>" alt="Screenshot" class="img-fluid rounded">
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-4">
                        <!-- Price & Install Card -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="mb-3">Pricing</h5>
                                <div class="h3 mb-4">
                                    Rp. <%= application.price.toLocaleString('id-ID') %> <small class="text-muted">/ Month</small>
                                </div>

                                <button class="btn btn-primary w-100 install-btn" data-app-id="<%= application._id %>">
                                    <i class="bi bi-download me-2"></i>Install Now
                                </button>
                            </div>
                        </div>

                        <!-- Support Details Card -->
                        <div class="card">
                            <div class="card-body">
                                <h5 class="mb-3">Support Details</h5>
                                <div class="support-details">
                                    <%- application.support_detail %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/controllers/storeController.js"></script>
</body>
</html> 